<form action="/cats/edit-cat/{{theCat.id}}" method="POST" class="cat-form" enctype="multipart/form-data">
    <h2>Edit Cat</h2>
    <label for="name">Name</label>
    <input name="name" type="text" id="name" value="{{theCat.name}}">
    <label for="description">Description</label>
    <textarea name="description" id="description">{{theCat.description}}</textarea>
    <label for="image">Image</label>
    <input name="upload" type="file" id="image">
    <label for="group">Breed</label>
    <select name="breed" id="group">
        {{#each catBreeds}}
            {{#if this.selected}}
                <option selected value="{{this.breed}}">{{this.breed}}</option>
            {{else}}
                <option value="{{this.breed}}">{{this.breed}}</option>
            {{/if}}
        {{/each}}
    </select>
    <button type="submit">Edit Cat</button>
</form>
        